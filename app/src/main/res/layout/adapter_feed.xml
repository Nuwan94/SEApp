<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:elevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="15dp">

            <ImageView
                android:id="@+id/feedPopUpMenuBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:padding="5dp"
                app:srcCompat="@mipmap/menu" />

            <TextView
                android:id="@+id/itemTextView"
                style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
                android:layout_width="wrap_content"
                android:layout_height="?attr/listPreferredItemHeight"
                android:layout_alignTop="@+id/feedImage"
                android:layout_alignEnd="@+id/feedImage"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:padding="8dp" />


            <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--android:id="@+id/feedImage"-->
            <!--android:layout_width="100sp"-->
            <!--android:layout_height="100sp"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginStart="5sp"-->
            <!--android:tint="@color/colorPrimary"-->
            <!--app:civ_border_overlay="false"-->
            <!--app:civ_border_width="0dp" />-->

            <ImageView
                android:id="@+id/feedImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/open_book" />

            <TextView
                android:id="@+id/feedTitle"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/itemTextView"
                android:layout_alignBottom="@+id/feedImage"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/feedPopUpMenuBtn"
                android:layout_toEndOf="@+id/feedImage"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="Feed Title"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feedDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedImage"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:padding="3dp"
                android:text="Description"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedDesc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/feedAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="3dp"
                    android:text="Author"
                    android:textAlignment="viewStart"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/feedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="3dp"
                    android:text="Time"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="12sp" />

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>