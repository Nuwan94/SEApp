<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomButtons"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0dp"
        android:fitsSystemWindows="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/dialogTextViewTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="Title"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/dialogEditTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Title"
                    android:inputType="textShortMessage"
                    android:padding="15dp"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/dialogSpinnerType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ddd"
                android:orientation="horizontal"
                android:padding="3dp">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5" />

                <ImageView
                    android:id="@+id/dialogBtnBold"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/bold" />

                <ImageView
                    android:id="@+id/dialogBtnUnderline"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/underline" />

                <ImageView
                    android:id="@+id/dialogBtnLink"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/link" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5" />
            </LinearLayout>

            <EditText
                android:id="@+id/dialogEditDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:gravity="top|left"
                android:hint="Message"
                android:inputType="textMultiLine|textLongMessage"
                android:minHeight="250dp"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:filterTouchesWhenObscured="false"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialogNegativeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/alizarin"
            android:text="Cancel"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/dialogPositiveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/emerald"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>